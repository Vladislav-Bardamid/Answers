<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Answers.App">
    <Application.Resources>
        <ResourceDictionary>
            <OnPlatform x:Key="RobotoRegular" x:TypeArguments="x:String">
                <On Platform="iOS">Roboto-Regular</On>
                <On Platform="Android">Roboto-Regular.ttf#Roboto-Regular</On>
            </OnPlatform>


            <Style x:Key="LabelStyleBlackRobotoRegular" TargetType="Label">
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontFamily" Value="{StaticResource RobotoRegular}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>